<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sandro_suladze_cc.schedule.MainMenuActivity">

    <Button
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Schedule"
        android:id="@+id/scheduleBtn"
        android:layout_marginLeft="35dp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:background="@drawable/buttonshape2"
        android:layout_centerVertical="true" />

    <Button
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="GeoWorker's List"
        android:id="@+id/workerList"
        android:background="@drawable/buttonshape2"
        android:layout_below="@+id/scheduleBtn"
        android:layout_alignLeft="@+id/scheduleBtn"
        android:layout_alignStart="@+id/scheduleBtn"
        android:layout_marginTop="55dp" />
</RelativeLayout>
